<!DOCTYPE html>
<html ng-app="chartLMS">
<head>
	<% include partials/header %>
	<% include partials/customh %>

	<!-- Latest compiled JavaScript -->
	<script src="js/jquery.min.js"></script>
	<script src="js/bootstrap.min.js"></script>

	<!-- Angular controller -->
	<script src="/js/angular.min.js"></script>
	<script src="/js/controllers/productController.js"></script>
	<script src="/js/services/product.js"></script>
	<script src="/js/productcore.js"></script>

	<!-- Bootstrap tether Core JavaScript -->
	<script src="js/popper.min.js"></script>

	<!-- slimscrollbar scrollbar JavaScript -->
	<script src="js/jquery.slimscroll.js"></script>

	<!--Menu sidebar -->
	<script src="js/sidebarmenu.js"></script>

	<!--stickey kit -->
	 <script src="js/sticky-kit.min.js"></script>
	<!-- chart library -->
	 <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js"></script>	 
</head>
<body ng-controller="mainController" class="fix-header fix-sidebar">
	<div id="main-wrapper">

		<% include partials/nav %>

		<% include partials/sidebar %>		

		<div class="page-wrapper limiter">
			<div id="product-list" class="container-table">
				<ul>
					<li ng-repeat="product in products">
						<h1>{{product.name}}</h1>
						<div class="wrap-table">
								<table id="table">
									<thead>
										<tr class="row">
											<th class="column">Product ID</th>
											<th class="column">Product Name</th>
											<th class="column">Qty In Stock</th>
											<th class="column">Qty Sold</th>
											<th class="column">Price</th>
											<!-- <th class="column">Time Stamp</th> -->
										</tr>
									</thead>
									<!-- LOOP OVER THE USERS IN $scope.users -->
									<tbody>
										<tr ng-repeat="item in product.item" class="row">
										<td class="column">{{item.productID}}</td>
										<td class="column">{{item.productName}}</td>
										<td class="column">{{item.quantity_in_stock}}</td>
										<td class="column">{{item.quantity_sold}}</td>	                		
										<td class="column">{{item.price}}</td>
										<!-- <td class="column">{{product.timestamp}}</td> -->
									</tr>
									</tbody>
									
								</table>
								
							</div>
					</li>
				</ul>
				<input type="text" name="shopName" ng-model="shopName">
				<input type="button" class="btn-danger" ng-click="createShop(shopName)" value="createShop">
				<h1>{{shopName}}</h1>
	        </div>
		</div>
	</div>
</body>

<script src="js/reports.js"></script>

</html>