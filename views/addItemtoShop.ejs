
<html ng-app="chartLMS">
<head>
	<% include partials/header %>

	<!-- Angular controller -->
	<script src="/js/angular.min.js"></script>
	<script src="/js/controllers/productController.js"></script>
	<script src="/js/services/product.js"></script>
	<script src="/js/productcore.js"></script>

	<link rel="stylesheet" type="text/css" href="/css/login.css">	
</head>
<body ng-controller="mainController">
<div class="login-page">
	<div class="form">
		<h3>Add Item</h3><br>
         <form class="register-form" >
                <select name="shopName" ng-change="getID(value)" ng-model="value" >
                        <option ng-repeat="product in products" ng.value="product.name">{{product.name}}</option>
				</select>
			  <!-- <input type="text" name="productID" ng-model="item.productID" placeholder="productID"/>  -->
			  <select name="productID" ng-change="" ng-model="item.productID" >
					<option ng-repeat="item in items" ng.value="item.productID">{{item.productID}}</option>
			</select>  
              <input type="text" name="qty_init" ng-model="item.qty_init" placeholder="qty_init"/>
              <button ng-click="addItem(data._id)">create</button>
              <!-- <h1>{{data}}</h1> -->
   		 </form>
	</div>
</div>
</body>