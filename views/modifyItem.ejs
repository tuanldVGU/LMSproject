<!DOCTYPE html>
<html ng-app="itemLMS">
<head>
	<% include partials/header %>
	<% include partials/customh %>

	<!-- Latest compiled JavaScript -->
	<script src="js/jquery.min.js"></script>
	<script src="js/bootstrap.min.js"></script>

	<!-- Angular controller -->
	<script src="/js/controllers/itemController.js"></script>
	<script src="/js/services/item.js"></script>
	<script src="/js/cores/itemcore.js"></script>

	<!-- Bootstrap tether Core JavaScript -->
	<script src="js/popper.min.js"></script>

	<!-- slimscrollbar scrollbar JavaScript -->
	<script src="js/jquery.slimscroll.js"></script>

	<!--Menu sidebar -->
	<script src="js/sidebarmenu.js"></script>

	<!--stickey kit -->
	 <script src="js/sticky-kit.min.js"></script>
	<!-- chart library -->
	 <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js"></script>	 
</head>
<body ng-controller="mainController" class="fix-header fix-sidebar">
	<div id="main-wrapper">

		<% include partials/nav %>

		<% include partials/sidebar %>		

		<div class="page-wrapper limiter">
			<div id="product-list" class="container-table">
						<div class="wrap-table">
								<table id="table">
									<thead>
										<tr class="row">
											<th class="column05">Product ID</th>
											<th class="column05">Product Name</th>
											<th class="column05">Price</th>
											<th class="column05">Update</th>
											<th class="column05">Delete</th>
											<!-- <th class="column">Time Stamp</th> -->
										</tr>
									</thead>
									<!-- LOOP OVER THE USERS IN $scope.users -->
									<tbody>
										<tr ng-repeat="item in items" class="row">
										<td class="column05">{{item.productID}}</td>
										<td class="column05"><input type="text" ng-model="item.productName" placeholder="{{item.productName}}"></td>	                		
										<td class="column05"><input type="text" ng-model="item.price" placeholder="{{item.price}}"></td>
										<td class="column05"><input type="button" value="update" ng-click="updateItem(item._id,item)" class="btn-danger"></td>
										<td class="column05"><input type="button" value="delete" ng-click="deleteItem(item._id)" class="btn-danger"></td>
										<!-- <td class="column">{{product.timestamp}}</td> -->
									</tr>
									</tbody>
									
								</table>
							</div>
	        </div>
		</div>
	</div>
	<% include partials/footer %>
</body>
</html>